<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?scenebuilder-stylesheet /client.css/Styles.client.css?>
<?import java.net.URL?>

<VBox fx:id="VBox" alignment="TOP_LEFT" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="client.sample.Controller">

    <stylesheets><URL value="@/client/css/Styles.css"/></stylesheets>

    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox fx:id="HBox">
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Enter your message here.." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onAction="#sendMsg" text="SEND"/>
    </HBox>
</VBox>